<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hotel.mapper.PaymentMapper">

    <resultMap id="BaseResultMap" type="com.hotel.entity.Payment">
        <id column="id" property="id"/>
        <result column="order_id" property="orderId"/>
        <result column="payment_no" property="paymentNo"/>
        <result column="payment_method" property="paymentMethod"/>
        <result column="amount" property="amount"/>
        <result column="status" property="status"/>
        <result column="payment_time" property="paymentTime"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, order_id, payment_no, payment_method, amount, status, payment_time, create_time
    </sql>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM sys_payment
        WHERE id = #{id}
    </select>

    <select id="selectByPaymentNo" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM sys_payment
        WHERE payment_no = #{paymentNo}
    </select>

    <select id="selectByOrderId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM sys_payment
        WHERE order_id = #{orderId}
        ORDER BY create_time DESC
    </select>

    <insert id="insert" parameterType="com.hotel.entity.Payment" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_payment (order_id, payment_no, payment_method, amount, status, payment_time)
        VALUES (#{orderId}, #{paymentNo}, #{paymentMethod}, #{amount}, #{status}, #{paymentTime})
    </insert>

    <update id="updateStatus">
        UPDATE sys_payment SET status = #{status} WHERE id = #{id}
    </update>

    <update id="updateStatusByOrderId">
        UPDATE sys_payment SET status = #{status} WHERE order_id = #{orderId}
    </update>

    <update id="updatePaymentTime">
        UPDATE sys_payment SET payment_time = #{paymentTime} WHERE id = #{id}
    </update>

</mapper>
